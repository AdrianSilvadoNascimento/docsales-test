<h1>New Document</h1>
<a href="<%= list_api_v1_documents_path %>" class="return">Back</a>
<%= form_with(model: @document, url: @document.new_record? ? api_v1_documents_path : api_v1_document_path(@document), local: true) do |form| %>
  <div class="form">
    <div class="card">
      <div class="form-group">
        <%= form.label :customer_name, class: 'custom-label' %>
        <%= form.text_field :customer_name, class: 'custom-input' %>
      </div>

      <div class="form-group">
        <%= form.label :contract_value, class: 'custom-label' %>
        <%= form.text_field :contract_value, class: 'custom-input' %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: 'custom-label' %>
        <%= form.text_area :description, class: 'custom-text-area' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Generate PDF', class: 'return' %>
      </div>
    </div>
  </div>
<% end %>
